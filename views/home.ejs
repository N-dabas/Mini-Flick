<% include  partials/header.ejs %>
<div class='container'>
    <header class='jumbotron'>
        <div class='container'>
            <h2> Welcome to Movie Hub </h2>
            <p> The best review about movies can be found here </p>
            <p> <a class='btn btn-primary btn-large' href="/search"> Search your Movie  <i class="glyphicon glyphicon-search"></i></a> </p>
            <p> <a class='btn btn-success btn-large' href="/watchlist/<%= currentuser._id %>"> My Watchlist <i class="glyphicon glyphicon-menu-hamburger"> </i></a> </p>
            <p> <a class='btn btn-info btn-large' href="/user/<%= currentuser._id %>/edit"> Edit Profile <i class="glyphicon glyphicon-pencil"></i></a> </p>
            <div class="text-right">
                <!--<form action="/uSearch" method="GET">-->
                <!--    <input type="text" class="form-control" name="user_key" placeholder="Search User" >-->
                <!--    <button class="btn btn-info btn-sm"> Submit</button>-->
                <!--</form>-->
                <form action="/uSearch" method="GET">
                    <div class="input-group input-group-lg">
                      <input type="text" class="form-control" name="user_key" placeholder="Search User">
                      <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                      </div>
                    </div>
                </form>
            </div>
         </div>
    </header>
    <h2 class="review" align="center"> Recent Reviews by People you follow </h2><br>

    <div class='row text-center' style="display:flex;flex-wrap:wrap;background: rgba(223, 240, 216, 0.35);border-radius: 10px;padding: 10px;padding-bottom: 0px; border: 2px solid #008000;">
        <% all_movies.forEach(function(movie){ %>
            <div class='col-lg-2 col-sm-6'>
                <div class='thumbnail'>
                    <img src="<%= movie.data.Poster %> " height=300 width=300>
                    <div class='caption'>
                        <h4><a href="/movie/<%= movie.mid %>" ><%= movie.data.Title %></a></h4>
                    </div>

                        By : <%= movie.author.username %>

                    <p>
                        <a href="/review/<%= movie._id %>">More info </a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    <% if(my_movies.length!==0) {%>
    <h2  class = "review" align="center"> Reviews by you </h2>
    <div class='row text-center' style="display:flex;flex-wrap:wrap;background: rgba(223, 240, 216, 0.35);border-radius: 10px;padding: 10px;padding-bottom: 0px; border: 2px solid #008000;">
        <% my_movies.forEach(function(movie){ %>
            <div class='col-lg-2 col-sm-6'>
                <div class='thumbnail'>
                    <img src="<%= movie.data.Poster %> " height=300 width=300>
                    <div class='caption'>
                        <h4> <a href="/movie/<%= movie.mid %>" ><%= movie.data.Title %> </a></h4>
                    </div>
                    <p>
                        <a href="/review/<%= movie._id %>">More info </a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    <% } %>
</div>
<% include partials/footer.ejs %>
